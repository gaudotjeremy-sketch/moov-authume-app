<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Scanner Moov Authume</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>
</head>
<body class="bg-gray-100 text-gray-900">

  <div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-2xl shadow-lg text-center">
    <img src="/static/logo.png" alt="Logo Moov Authume" class="mx-auto w-24 mb-4">
    <h1 class="text-2xl font-bold mb-4">Scanner un QR Code</h1>

    <div id="reader" style="width: 300px; margin: auto;"></div>
    <p id="result-message" class="mt-4 text-lg font-semibold"></p>
  </div>

  <script>
    function onScanSuccess(decodedText) {
      fetch("/api/validate", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ qr_data: decodedText, volunteer: "Bénévole1" })
      })
      .then(res => res.json())
      .then(data => {
        const msg = document.getElementById("result-message");
        if (data.status === "ok") {
          msg.textContent = "✅ Bon validé avec succès pour " + data.member;
          msg.className = "text-green-600 font-bold mt-4";
        } else {
          msg.textContent = "❌ Bon déjà validé par " + data.volunteer + " à " + data.time;
          msg.className = "text-red-600 font-bold mt-4";
        }
      });
    }

    const html5QrCode = new Html5Qrcode("reader");
    html5QrCode.start({ facingMode: "environment" }, { fps: 10, qrbox: 250 }, onScanSuccess);
  </script>
</body>
</html>
